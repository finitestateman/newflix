{
    "name": "newflix",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "pnpm run clean && tsgo -p tsconfig.tsgo.build.json",
        "build:watch": "tsgo -w -p tsconfig.tsgo.build.json",
        "typecheck": "tsgo --noEmit -p tsconfig.tsgo.json",
        "format": "biome format --write .",
        "start": "pnpm run build && node dist/src/main.js",
        "start:dev": "pnpm run build && (pnpm run build:watch & node --watch dist/src/main.js)",
        "start:debug": "pnpm run build && (pnpm run build:watch & node --inspect --watch dist/src/main.js)",
        "start:prod": "node dist/src/main.js",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:cov": "vitest run --coverage",
        "test:e2e": "vitest run --config vitest.e2e.config.ts"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.3",
        "@nestjs/core": "^11.0.1",
        "@nestjs/mapped-types": "*",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/typeorm": "^11.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "joi": "^18.0.2",
        "pg": "^8.18.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.28"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "@typescript/native-preview": "7.0.0-dev.20260213.1",
        "@vitest/coverage-v8": "^2.1.8",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "vitest": "^2.1.8"
    }
}
